{
  "permissions": {
    "allow": [
      "Read(~/.claude/skills/**)",
      "Write(/tmp/**)",
      "Bash(cd:*)",
      "Bash(cut:*)",
      "Bash(diff:*)",
      "Bash(echo:*)",
      "Bash(file:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mkdir -p:*)",
      "Bash(pandoc:*)",
      "Bash(pwd:*)",
      "Bash(rg:*)",
      "Bash(sort:*)",
      "Bash(tr:*)",
      "Bash(tree:*)",
      "Bash(type:*)",
      "Bash(uniq:*)",
      "Bash(which:*)",
      "Bash(wc:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(git add:*)",
      "Bash(git blame:*)",
      "Bash(git commit:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git remote get-url:*)",
      "Bash(git rev-parse:*)",
      "Bash(git show:*)",
      "Bash(git status:*)",
      "Bash(~/.claude/skills/searching-datadog-logs/scripts/search_logs:*)",
      "Skill(brainstorming)",
      "Skill(completing-work)",
      "Skill(executing-plans)",
      "Skill(creating-skills)",
      "Skill(test-driven-development)",
      "Skill(searching-datadog-logs)",
      "Skill(writing-plans)",
      "mcp__atlassian__atlassianUserInfo",
      "mcp__atlassian__getAccessibleAtlassianResources",
      "mcp__atlassian__search",
      "mcp__atlassian__fetch",
      "mcp__atlassian__getJiraIssue",
      "mcp__atlassian__searchJiraIssuesUsingJql",
      "mcp__atlassian__getTransitionsForJiraIssue",
      "mcp__atlassian__getJiraIssueRemoteIssueLinks",
      "mcp__atlassian__getVisibleJiraProjects",
      "mcp__atlassian__getJiraProjectIssueTypesMetadata",
      "mcp__atlassian__getJiraIssueTypeMetaWithFields",
      "mcp__atlassian__lookupJiraAccountId",
      "mcp__atlassian__getConfluencePage",
      "mcp__atlassian__searchConfluenceUsingCql",
      "mcp__atlassian__getConfluenceSpaces",
      "mcp__atlassian__getPagesInConfluenceSpace",
      "mcp__atlassian__getConfluencePageDescendants",
      "mcp__atlassian__getConfluencePageFooterComments",
      "mcp__atlassian__getConfluencePageInlineComments"
    ],
    "deny": [
      "Read(~/.aws/**)",
      "Read(~/.bash_secrets)",
      "Read(~/.config/gh/**)",
      "Read(~/.docker/**)",
      "Read(~/.gnupg/**)",
      "Read(~/.ssh/**)",
      "Bash(git -C:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/pre-commit-gitleaks"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude needs your attention' -message \"$PWD\" && afplay /System/Library/Sounds/Ping.aiff && cwm notify",
            "async": true
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude is done' -message \"$PWD\" && afplay /System/Library/Sounds/Glass.aiff && cwm notify",
            "async": true
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bunx ccusage statusline"
  },
  "enabledPlugins": {
    "gopls-lsp@claude-plugins-official": true
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "allowUnsandboxedCommands": true,
    "excludedCommands": [
      "aws:*",
      "docker:*",
      "docker-compose:*",
      "gh:*",
      "git:*"
    ]
  },
  "effortLevel": "medium"
}
